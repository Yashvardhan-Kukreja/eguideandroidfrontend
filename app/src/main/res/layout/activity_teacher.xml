<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yash1300.e_guide.Teacher">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="E-guide"
        android:elevation="5dp"
        app:titleTextColor="#ffffff"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:background="#22003d"></android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Students Interested"
        android:layout_gravity="center_horizontal"
        android:textColor="#22003d"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/studentsInterestedText"
        android:textSize="30sp"/>
<ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/allInterestedStudentsList">
</ListView>
</LinearLayout>
